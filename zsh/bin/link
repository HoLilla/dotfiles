#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null && pwd)"

mkdir -p "$HOME/.config"
mkdir -p "$HOME/Library/Caches/"
mkdir -p "$HOME/.local/share"
mkdir -p "$HOME/Library/Caches/run"
mkdir -p "$HOME/.config/zsh/"

rm -f "$HOME/.zshenv"
ln -s "$SCRIPT_DIR/../.zshenv" "$HOME/.zshenv"
rm -f "$HOME/.config/zsh/.zshrc"
ln -s "$SCRIPT_DIR/../.zshrc" "$HOME/.config/zsh/.zshrc"
