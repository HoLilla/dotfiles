#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null && pwd)"

mkdir -P "$HOME/.config"
mkdir -P "$HOME/Library/Caches/"
mkdir -P "$HOME/.local/share"
mkdir -P "$HOME/Library/Caches/run"

for FILENAME in .zshrc .zshenv; do
  rm -f "$HOME/$FILENAME"
  ln -s "$SCRIPT_DIR/../$FILENAME" "$HOME/$FILENAME"
done
