#!/usr/bin/env bash

set -euo pipefail

MSG="$1"

check_for_duplicate() {
    test "" = "$(grep "^$2: " "$1" |
        sort | uniq -c | sed -e '/^[ 	]*1[ 	]/d')" || {
        cat "$1"
        cat << EOF
    Your commit not have the same name duplicated in the Signed-off-by field"
EOF
        exit 1
    }
}

check_for_duplicate "$MSG" Signed-off-by 
check_for_duplicate "$MSG" Co-authored-by
