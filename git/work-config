[init]
  templatedir = ~/.config/git/init-template

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[diff "sopsdiffer"]
  textconv = "sops -d"

