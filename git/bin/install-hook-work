#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"

rm -f "$HOME/.gitconfig"
cp "$SCRIPT_DIR/../work-gitconfig" "$HOME/.gitconfig"

mkdir -p "$HOME/.git-templates/hooks"
git config --global init.templatedir "$HOME/.git-templates"
cp "$SCRIPT_DIR/../commit-msg-hook-work" "$HOME/.git-templates/hooks/commit-msg"
chmod +x "$HOME/.git-templates/commit-msg"