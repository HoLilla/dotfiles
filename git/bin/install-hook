#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null && pwd)"
CONFIG_DIR="$HOME/.config/git/init-template"
HOOKS_DIR="$CONFIG_DIR/hooks"

mkdir -p "$HOOKS_DIR"
git config --global init.templatedir "$CONFIG_DIR"
cp "$SCRIPT_DIR/../commit-msg-hook" "$HOOKS_DIR/commit-msg"
cp "$SCRIPT_DIR/../prepare-commit-msg-hook" "$HOOKS_DIR/prepare-commit-msg"
