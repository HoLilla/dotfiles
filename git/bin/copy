#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null && pwd)"

CONFIG_DIR="$HOME/.config/git"
mkdir -p "$CONFIG_DIR"

for FILENAME in config message ignore; do
  rm -f "$CONFIG_DIR/$FILENAME"
  cp "$SCRIPT_DIR/../$FILENAME" "$CONFIG_DIR/$FILENAME"
done
