#!/usr/bin/env bats

@test "brew installed" {
  run brew -h

  [ "$status" -eq 0 ]
}


@test "java installed" {
  run java -h

  [ "$status" -eq 0 ]
}

@test "java 1.8 installed" {
  export JAVA_HOME="$(/usr/libexec/java_home -v 1.8)";
  run java -h

  [ "$status" -eq 0 ]
}

@test "coursier installed" {
  run coursier -h

  [ "$status" -eq 0 ]
}

@test "gometalinter installed" {
  run gometalinter

  [ "$status" -eq 0 ]
}

