#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null && pwd)"

rm -f "$HOME/.fasdrc"
ln -s "$SCRIPT_DIR/../.fasdrc" "$HOME/.fasdrc"
mkdir -p "$HOME/.config/fasd"
rm -f "$HOME/.config/fasd/.fasdrc"
ln -s "$SCRIPT_DIR/../.fasdrc" "$HOME/.config/fasd/.fasdrc"
