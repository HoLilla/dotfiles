#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null && pwd)"

CONFIG_DIR="$HOME/.config"
if [ ! -d "$CONFIG_DIR" ]; then
	mkdir -p "$CONFIG_DIR"
fi

FILENAME="starship.toml"
rm -f "$CONFIG_DIR/$FILENAME"
ln -s "$SCRIPT_DIR/../$FILENAME" "$CONFIG_DIR/$FILENAME"
